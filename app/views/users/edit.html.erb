<%= form_for @user do |f| %>

<div class="login" style="margin-top:20px;">
  <div class="container" style="margin-top:20px;">
    <div class="form" style="position: relative; text-align:center; margin: 0 auto; width:450px; margin-top:20px;">	
			<div style="text-align: left; padding-top:0px;">
				<h2 style="font-size:30px; font-weight:200; letter-spacing:0.5px;margin-bottom:0px;margin-top:10px;">Profil</h2>
				   <%= f.text_field :last_name, :onclick => "this.value=''", :placeholder => @user.last_name, :value => @user.last_name, :class => 'formneutre'%><%= f.text_field :first_name, :onclick => "this.value=''", :placeholder => @user.first_name, :value => @user.first_name, :class => 'formneutre'%>
					
				<br>
				<br>
				<br>
				<div style="margin-left:-20px;border:2px solid grey; margin-top:20px; border-radius:10px;width:100%; padding-top:18px; padding-left:20px; padding-bottom:2px;">
				<h2 style="font-size:20px; font-weight:200; letter-spacing:0.5px;margin-bottom:0px;display:inline;">Abonnement</h2>
				<h2 style="position:absolute; right:35px; top:140px; font-size:18px; font-weight:200; letter-spacing:3px; color:#ACAEAE;"><%= link_to "UPGRADE"%></h2>
				<h2 style="font-size:17px; font-weight:200; letter-spacing:0.5px;margin-top:3px; color:#ACAEAE;">100 - 600 impressions</h2>
				
			    </div>
				<br>
				<h2 style="font-size:20px; font-weight:200; letter-spacing:0.5px;margin-bottom:0px;margin-top:17px;">Email</h2>
				<h2 style="font-size:17px; font-weight:200; letter-spacing:0.5px;margin-top:2px; color:#ACAEAE;"><%= f.text_field :email, :onclick => "this.value=''", :placeholder => @user.email, :value => @user.email, :class => 'formneutre2', :style => "width:220px;"%></h2>
				<br>
			
				<br>
				<h2 style="font-size:20px; font-weight:200; letter-spacing:0.5px;margin-bottom:10px;margin-top:28px;">Adresse de facturation</h2>
				
	       <%= f.text_field :address2, :placeholder => @user.address2, :class => 'formneutre2', :style => "margin-top:2px; width:352px;margin-bottom:20px;" %>
				<div>
					   <%= f.text_field :zipcode2, :placeholder => @user.zipcode2, :class => 'formneutre3', :style => "margin-top:2px; margin-right:15px;margin-bottom:15px;" %>
					<h2 style="font-size:30px; font-weight:100; letter-spacing:0.5px;margin-top:2px; color:#ACAEAE;display:inline;float:left; margin-left:10px;">|</h2>
					   <%= f.text_field :town2, :placeholder => @user.town2, :class => 'formneutre3', :style => "margin-top:2px; margin-left:15px;" %>
				</div>
				   <%= f.text_field :pays2, :placeholder => @user.pays2, :class => 'formneutre2', :style => "margin-top:-10px;width:350px;" %>
			</div>
			
			<div style="margin-left:0px; float:left;"><%= f.submit 'Suite', :class => 'btnbas btn-2 btn-2c', :style =>"margin-left:0px;margin-top:45px;letter-spacing:1px;margin-bototm:60px;" %></div>
  <% end %>
    </div>
  </div>
</div>